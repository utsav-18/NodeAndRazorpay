<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Checkout</title>

  <style>
    /* ---- base (taken + adapted from your snippet) ---- */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #ffffff 0%, #fff5f5 100%);
      color: #222;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    a { text-decoration: none; color: inherit; }

    .container {
      width: 100%;
      max-width: 980px;
      margin: 0 auto;
      padding: 24px;
    }

    /* Alert Bar */
    .alert-bar {
      background: linear-gradient(135deg, #c62828 0%, #b71c1c 100%);
      color: #fff;
      padding: 10px 18px;
      border-radius: 12px;
      text-align: center;
      margin-bottom: 22px;
      box-shadow: 0 8px 25px rgba(183,28,28,0.25);
      font-size: 0.98rem;
      font-weight: 700;
      position: relative;
      overflow: hidden;
      animation: slideInDown 0.6s ease-out;
    }

    @keyframes slideInDown {
      from { transform: translateY(-10px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    /* Layout */
    .layout {
      display: grid;
      grid-template-columns: 1fr 420px;
      gap: 28px;
      align-items: start;
    }

    /* Left: Info / details */
    .info {
      background: linear-gradient(180deg, rgba(255,255,255,0.9), rgba(255,255,255,0.95));
      padding: 22px;
      border-radius: 14px;
      box-shadow: 0 8px 30px rgba(15,15,15,0.04);
    }
    .info h1 {
      font-size: 1.25rem;
      margin-bottom: 8px;
      color: #111;
    }
    .info p { color: #444; line-height: 1.5; font-size: 0.95rem; margin-bottom: 14px; }

    .price-chip {
      display: inline-block;
      background: linear-gradient(90deg,#6c63ff,#8e7bff);
      color: #fff;
      padding: 8px 12px;
      border-radius: 999px;
      font-weight: 700;
      margin-top: 8px;
      box-shadow: 0 8px 20px rgba(108,99,255,0.18);
    }

    /* Right: Checkout Card */
    .checkout-card {
      background: #fff;
      padding: 22px;
      border-radius: 14px;
      box-shadow: 0 10px 40px rgba(16,24,40,0.06);
    }

    .card-title {
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:12px;
      margin-bottom: 12px;
    }
    .card-title h2 { font-size:1.15rem; color:#111; }
    .small-muted { font-size:0.88rem; color:#6b7280; }

    .form-group { margin-bottom: 14px; }
    label {
      display:block;
      font-size:0.86rem;
      color:#374151;
      margin-bottom:6px;
      font-weight:600;
    }
    input, select {
      width:100%;
      padding: 10px 12px;
      border-radius: 10px;
      border: 1px solid #e6e9ef;
      font-size: 0.96rem;
      outline: none;
      transition: 0.18s ease;
      background: #fbfdff;
    }
    input:focus { box-shadow: 0 6px 18px rgba(99,102,241,0.12); border-color: #6c63ff; }

    .actions {
      margin-top: 10px;
      display:flex;
      flex-direction:column;
      gap:10px;
    }
    .btn {
      display:inline-block;
      padding: 12px;
      border-radius: 10px;
      border: none;
      cursor: pointer;
      font-weight: 700;
      font-size: 1rem;
    }
    .btn-primary {
      background: linear-gradient(90deg,#6c63ff,#8e7bff);
      color:#fff;
      box-shadow: 0 10px 30px rgba(108,99,255,0.16);
    }
    .btn-ghost {
      background: transparent;
      color: #6b7280;
      border: 1px solid #e6e9ef;
    }

    .meta {
      margin-top:12px;
      font-size:0.9rem;
      color:#6b7280;
    }

    /* small helper */
    .error { color:#b91c1c; font-size:0.87rem; margin-top:6px; display:none; }

    /* responsive */
    @media (max-width: 900px) {
      .layout { grid-template-columns: 1fr; }
      .checkout-card { order: 2; margin-top: 12px; }
      .info { order: 1; }
      .container { padding: 18px; }
      .checkout-card, .info { padding: 18px; }
    }

    @media (max-width: 420px) {
      body { padding: 5px; }
      .checkout-card { padding: 12px; border-radius: 12px; }
      .info { padding: 16px; border-radius: 12px; margin-top: -4rem;}
      .price-chip { font-size: 0.95rem; padding: 7px 10px; }
      input { padding: 10px; font-size: 0.95rem; }
    }
    .layout{
      margin-top:5rem;
    }
  </style>
  
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">

    <div class="alert-bar">
      <span class="price-highlight">Limited Offer just at Rs. 199/-</span>
            instead of <span class="old-price">Rs. 2999</span>.
    </div>

    <div class="layout">
      <div class="info" aria-hidden="false">
        <h1>Secure Payment</h1>
        <p>Fast, secure checkout powered by Razorpay. We never store your card details — payments are securely processed by Razorpay. Fill your details and proceed to pay.</p>

        <div style="margin-top:12px;">
          <div class="small-muted">Amount to pay</div>
          <div class="price-chip">₹<%= (amount/100).toFixed(2) %></div>
        </div>

        <div class="meta">
          <div><strong>Support:</strong> support@example.com</div>
          <div style="margin-top:6px;"><strong>Receipt:</strong> auto-generated after payment</div>
        </div>
      </div>

      <aside class="checkout-card" role="region" aria-labelledby="checkout-heading">
        <div class="card-title">
          <h2 id="checkout-heading">Checkout</h2>
          <div class="small-muted">Total: ₹<%= (amount/100).toFixed(2) %></div>
        </div>

        <form id="checkoutForm" onsubmit="return false;" novalidate>
          <div class="form-group">
            <label for="custName">Full name</label>
            <input id="custName" name="custName" type="text" autocomplete="name" placeholder="Jane Doe" required />
            <div class="error" id="errName">Please enter your name.</div>
          </div>

          <div class="form-group">
            <label for="custEmail">Email address</label>
            <input id="custEmail" name="custEmail" type="email" autocomplete="email" placeholder="jane@company.com" required />
            <div class="error" id="errEmail">Please enter a valid email.</div>
          </div>

          <div class="form-group">
            <label for="custPhone">Phone (optional)</label>
            <input id="custPhone" name="custPhone" type="tel" autocomplete="tel" placeholder="+91 98765 43210" />
          </div>

          <div class="actions">
            <button id="payBtn" class="btn btn-primary" type="button">Pay ₹<%= (amount/100).toFixed(2) %></button>
            <button id="cancelBtn" class="btn btn-ghost" type="button">Cancel</button>
          </div>

          <div class="meta" style="margin-top:10px;">
            By clicking pay you agree to our <a href="#">Terms</a> & <a href="#">Privacy</a>.
          </div>
        </form>
      </aside>
    </div> <!-- layout -->

  </div> <!-- container -->

  <!-- hidden server values -->
  <div id="rzp-data" data-amount="<%= amount %>" data-key="<%= key_id %>" style="display:none"></div>

  <script>
    // read safe values from DOM
    const dataEl = document.getElementById('rzp-data');
    const AMOUNT_PAISA = Number(dataEl.getAttribute('data-amount'));
    const RAZORPAY_KEY_ID = dataEl.getAttribute('data-key');

    const payBtn = document.getElementById('payBtn');
    const cancelBtn = document.getElementById('cancelBtn');
    const nameInput = document.getElementById('custName');
    const emailInput = document.getElementById('custEmail');
    const phoneInput = document.getElementById('custPhone');

    // simple validators
    function isValidEmail(v) {
      return /\S+@\S+\.\S+/.test(v);
    }

    function showError(id, show) {
      const el = document.getElementById(id);
      if (!el) return;
      el.style.display = show ? 'block' : 'none';
    }

    cancelBtn.addEventListener('click', () => {
      // reset form
      nameInput.value = '';
      emailInput.value = '';
      phoneInput.value = '';
      showError('errName', false);
      showError('errEmail', false);
    });

    payBtn.addEventListener('click', async () => {
      const name = nameInput.value.trim();
      const email = emailInput.value.trim();
      const phone = phoneInput.value.trim();

      let ok = true;
      if (!name) { showError('errName', true); ok = false; } else { showError('errName', false); }
      if (!email || !isValidEmail(email)) { showError('errEmail', true); ok = false; } else { showError('errEmail', false); }

      if (!ok) return;

      payBtn.disabled = true;
      payBtn.textContent = 'Opening payment...';

      try {
        // create order on server
        const createRes = await fetch('/payment/create-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ amount: AMOUNT_PAISA })
        });

        const createData = await createRes.json();
        if (!createData.success) {
          console.error('create-order failed response:', createData);
          alert('Order creation failed: ' + (createData.error || 'Unknown error'));
          payBtn.disabled = false;
          payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
          return;
        }

        const order = createData.order;

        // build options for Razorpay
        const options = {
          key: RAZORPAY_KEY_ID,
          amount: order.amount,
          currency: order.currency,
          name: name,
          description: 'Order Payment',
          order_id: order.id,
          prefill: {
            name: name,
            email: email,
            contact: phone || "9999999999"
          },
          theme: { color: '#6c63ff' },

          handler: async function (response) {
            // send verification request (also pass name/email/amount)
            try {
              const verifyRes = await fetch('/payment/verify', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  ...response,
                  name,
                  email,
                  amount: AMOUNT_PAISA
                })
              });
              const v = await verifyRes.json();
              if (v.success) {
                window.location.href = '/payment-success';
              } else {
                alert('Payment verification failed: ' + (v.error || v.message || 'Unknown'));
                payBtn.disabled = false;
                payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
              }
            } catch (err) {
              console.error('verify request failed', err);
              alert('Verification request failed — check console.');
              payBtn.disabled = false;
              payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
            }
          },

          modal: {
            ondismiss: function() {
              // if user closes popup
              payBtn.disabled = false;
              payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
            }
          }
        };

        const rzp = new Razorpay(options);
        rzp.open();

      } catch (err) {
        console.error('create-order fetch failed', err);
        alert('Network or server error — check console.');
        payBtn.disabled = false;
        payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
      }
    });
  </script>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</body>
</html>
