<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Checkout</title>

  <link rel="stylesheet" href="/css/style.css" />

  <style>
    /* minimal local overrides to keep the template self-contained */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html,body { height: 100%; }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #ffffff 0%, #fff5f5 100%);
      color: #222;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .container {
      width: 100%;
      max-width: 980px;
      margin: 0 auto;
      padding: 24px;
      animation: containerEntry 0.45s cubic-bezier(.2,.9,.2,1);
    }
    @keyframes containerEntry { from { transform: translateY(8px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

    .alert-bar {
      background: linear-gradient(135deg, #c62828 0%, #b71c1c 100%);
      color: #fff;
      padding: 10px 18px;
      border-radius: 12px;
      text-align: center;
      margin-bottom: 22px;
      box-shadow: 0 12px 30px rgba(183,28,28,0.14);
      font-size: 0.98rem;
      font-weight: 700;
      position: relative;
      overflow: hidden;
    }

    .layout { display: grid; grid-template-columns: 1fr 420px; gap: 28px; align-items: start; margin-top: 4.5rem; }
    .info {
      background: linear-gradient(180deg, rgba(255,255,255,0.94), rgba(255,255,255,0.98));
      padding: 22px;
      border-radius: 14px;
      box-shadow: 0 10px 40px rgba(16,24,40,0.04);
      transition: transform .35s cubic-bezier(.2,.9,.2,1), box-shadow .35s;
    }
    .info h1 { font-size: 1.25rem; margin-bottom: 8px; color: #111; }
    .price-chip { display: inline-block; background: linear-gradient(90deg,#6c63ff,#8e7bff); color: #fff; padding: 8px 12px; border-radius: 999px; font-weight: 700; margin-top: 8px; letter-spacing: .2px; box-shadow: 0 12px 36px rgba(108,99,255,0.14); }

    .checkout-card {
      background: linear-gradient(180deg, #ffffff, #fbfdff);
      padding: 22px;
      border-radius: 16px;
      box-shadow: 0 18px 60px rgba(16,24,40,0.06);
      position: relative;
      overflow: hidden;
    }
    .card-title { display:flex; align-items:center; justify-content:space-between; gap:12px; margin-bottom: 14px; }
    .card-title h2 { font-size:1.15rem; color:#111; }
    .small-muted { font-size:0.88rem; color:#6b7280; }

    .form-group { margin-bottom: 14px; position: relative; }
    label { display:block; font-size:0.86rem; color:#374151; margin-bottom:6px; font-weight:600; }
    input { width:100%; padding: 10px 12px; border-radius: 10px; border: 1px solid #e6e9ef; font-size: 0.96rem; outline: none; background: #fff; }
    input::placeholder { color: #9aa0a6; }
    input:focus { box-shadow: 0 12px 30px rgba(108,99,255,0.12); border-color: #6c63ff; }

    .actions { margin-top: 10px; display:flex; flex-direction:column; gap:10px; }

    :root { --btn-shadow: 0 12px 30px rgba(16,24,40,0.08); --btn-shadow-strong: 0 18px 50px rgba(108,99,255,0.16); --brand-red: #c62828; }

    .btn, .homebtn {
      display:inline-block;
      padding: 12px 14px;
      border-radius: 20px;
      border: none;
      cursor: pointer;
      font-weight: 700;
      font-size: 1rem;
      box-shadow: var(--btn-shadow);
      transition: transform .14s, box-shadow .14s, opacity .12s;
      position: relative;
      overflow: hidden; /* for ripple */
    }
    .btn-primary {
      background: linear-gradient(135deg, var(--brand-red), #b71c1c);
      color:#fff;
    }
    .btn-ghost, .homebtn { background: transparent; color: #6b7280; border: 1px solid #e6e9ef; }
    .btn:hover, .homebtn:hover, .btn:focus, .homebtn:focus { transform: translateY(-3px); box-shadow: var(--btn-shadow-strong); outline: none; }
    .btn:active, .homebtn:active { transform: translateY(0px) scale(.995); box-shadow: 0 8px 20px rgba(16,24,40,0.06); }
    .meta { margin-top:12px; font-size:0.9rem; color:#6b7280; }
    .error { color:#b91c1c; font-size:0.87rem; margin-top:6px; display:none; }

    @media (max-width: 900px) { .layout { grid-template-columns: 1fr; } .checkout-card { order: 2; margin-top: 12px; } .info { order: 1; } .container { padding: 18px; } .checkout-card, .info { padding: 18px; } }
    @media (max-width: 420px) { body { padding: 5px; } .checkout-card { padding: 12px; border-radius: 12px; } .info { padding: 12px; border-radius: 12px; margin-top: -12px; } .price-chip { font-size: 0.95rem; padding: 7px 10px; } input { padding: 10px; font-size: 0.95rem; } .layout { margin-top: 2.5rem; gap: 12px; } }

    /* ensure ripple span doesn't block pointer events when removed */
    .btn span.ripple {
      position: absolute;
      border-radius: 50%;
      background: rgba(255,255,255,0.28);
      transform: scale(0);
      pointer-events: none;
    }
    .lathha{
      height: 60px;
    }
  </style>
</head>
<body>

  <div class="container">
    <% if (key_id && key_id.startsWith('rzp_test_')) { %>
      <div class="alert-bar" role="status">TEST MODE — Use Razorpay test card 4111 1111 1111 1111 (any future expiry / CVC 123). No real money charged.</div>
    <% } else { %>
      <div class="lathha"></div>
      <div class="alert-bar" role="status">LIVE MODE — Real payments will be processed. Double-check keys before proceeding.</div>
    <% } %>

    <div class="layout">
      <div class="info" aria-hidden="false">
        <h1>Secure Payment</h1>
        <p>Fast, secure checkout powered by Razorpay. We never store your card details — payments are securely processed by Razorpay. Fill your details and proceed to pay.</p>

        <div style="margin-top:12px;">
          <div class="small-muted">Amount to pay</div>
          <div class="price-chip">₹<%= (amount/100).toFixed(2) %></div>
          <div style="margin-top:10px;">
            <a href="/"><button class="homebtn btn-ghost" type="button">Back to home</button></a>
          </div>
        </div>

        <div class="meta">
          <div><strong>Support:</strong>support@aayrahtech.com </div>
          <div style="margin-top:6px;"><strong>Receipt:</strong> auto-generated after payment</div>
        </div>
      </div>

      <aside class="checkout-card" role="region" aria-labelledby="checkout-heading">
        <div class="card-title">
          <h2 id="checkout-heading">Checkout</h2>
          <div class="small-muted">Total: ₹<%= (amount/100).toFixed(2) %></div>
        </div>

        <form id="checkoutForm" onsubmit="return false;" novalidate>
          <div class="form-group">
            <label for="custName">Full name</label>
            <input id="custName" name="custName" type="text" autocomplete="name" placeholder="Jane Doe" required />
            <div class="error" id="errName">Please enter your name.</div>
          </div>

          <div class="form-group">
            <label for="custEmail">Email address</label>
            <input id="custEmail" name="custEmail" type="email" autocomplete="email" placeholder="jane@company.com" required />
            <div class="error" id="errEmail">Please enter a valid email.</div>
          </div>

          <div class="form-group">
            <label for="custPhone">Phone</label>
            <input id="custPhone" name="custPhone" type="tel" autocomplete="tel" placeholder="+91 0123456789" />
          </div>

          <div class="actions">
            <button id="payBtn" class="btn btn-primary" type="button">Pay ₹<%= (amount/100).toFixed(2) %></button>
            <button id="cancelBtn" class="btn btn-ghost" type="button">Cancel</button>
          </div>

          <div class="meta" style="margin-top:10px;">
            By clicking pay you agree to our <a href="#">Terms</a> & <a href="#">Privacy</a>.
          </div>
        </form>
      </aside>
    </div> <!-- layout -->
  </div> <!-- container -->

  <div id="rzp-data" data-amount="<%= amount %>" data-key="<%= key_id %>" style="display:none"></div>

  <script>
    const dataEl = document.getElementById('rzp-data');
    const AMOUNT_PAISA = Number(dataEl.getAttribute('data-amount'));
    const RAZORPAY_KEY_ID = dataEl.getAttribute('data-key');

    const payBtn = document.getElementById('payBtn');
    const cancelBtn = document.getElementById('cancelBtn');
    const nameInput = document.getElementById('custName');
    const emailInput = document.getElementById('custEmail');
    const phoneInput = document.getElementById('custPhone');

    function isValidEmail(v) { return /\S+@\S+\.\S+/.test(v); }
    function showError(id, show) { const el = document.getElementById(id); if (!el) return; el.style.display = show ? 'block' : 'none'; }

    cancelBtn.addEventListener('click', () => {
      nameInput.value = '';
      emailInput.value = '';
      phoneInput.value = '';
      showError('errName', false);
      showError('errEmail', false);
    });

    // ripple on pay (decorative)
    payBtn.addEventListener('pointerdown', (e) => {
      const circle = document.createElement('span');
      circle.className = 'ripple';
      const d = Math.max(payBtn.clientWidth, payBtn.clientHeight) * 1.2;
      circle.style.width = circle.style.height = d + 'px';
      const rect = payBtn.getBoundingClientRect();
      circle.style.left = (e.clientX - rect.left - d/2) + 'px';
      circle.style.top = (e.clientY - rect.top - d/2) + 'px';
      payBtn.appendChild(circle);
      // animate
      requestAnimationFrame(() => {
        circle.style.transform = 'scale(1)';
        circle.style.opacity = '1';
        circle.style.transition = 'transform 0.55s cubic-bezier(.18,.9,.19,1), opacity 0.55s';
      });
      setTimeout(()=> circle.remove(), 700);
    });

    payBtn.addEventListener('click', async () => {
      const name = nameInput.value.trim();
      const email = emailInput.value.trim();
      const phone = phoneInput.value.trim();

      let ok = true;
      if (!name) { showError('errName', true); ok = false; } else { showError('errName', false); }
      if (!email || !isValidEmail(email)) { showError('errEmail', true); ok = false; } else { showError('errEmail', false); }
      if (!ok) return;

      payBtn.disabled = true;
      payBtn.textContent = 'Opening payment...';

      try {
        const createRes = await fetch('/payment/create-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ amount: AMOUNT_PAISA })
        });

        const createData = await createRes.json();
        if (!createData.success) {
          console.error('create-order failed response:', createData);
          alert('Order creation failed: ' + (createData.error || 'Unknown error'));
          payBtn.disabled = false;
          payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
          return;
        }

        const order = createData.order;

        const options = {
          key: RAZORPAY_KEY_ID,
          amount: order.amount,
          currency: order.currency,
          name: name || 'Ira Edu Tech',
          description: 'Workshop fee',
          order_id: order.id,
          prefill: { name: name, email: email, contact: phone || "" },
          theme: { color: '#c62828' },

          handler: async function (response) {
            try {
              const verifyRes = await fetch('/payment/verify', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ ...response, name, email, amount: AMOUNT_PAISA })
              });
              const v = await verifyRes.json();
              if (v.success) {
                const q = new URLSearchParams({
                  order_id: v.order_id || response.razorpay_order_id || '',
                  payment_id: v.payment_id || response.razorpay_payment_id || '',
                  amount: String(v.amount || AMOUNT_PAISA),
                  receipt: v.receipt || ''
                }).toString();
                window.location.href = '/payment-success?' + q;
              } else {
                alert('Payment verification failed: ' + (v.error || v.message || 'Unknown'));
                payBtn.disabled = false;
                payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
              }
            } catch (err) {
              console.error('verify request failed', err);
              alert('Verification request failed — check console.');
              payBtn.disabled = false;
              payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
            }
          },

          modal: {
            ondismiss: function() {
              payBtn.disabled = false;
              payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
            }
          }
        };

        const rzp = new Razorpay(options);
        rzp.open();

      } catch (err) {
        console.error('create-order fetch failed', err);
        alert('Network or server error — check console.');
        payBtn.disabled = false;
        payBtn.textContent = 'Pay ₹' + (AMOUNT_PAISA/100).toFixed(2);
      }
    });
  </script>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</body>
</html>
